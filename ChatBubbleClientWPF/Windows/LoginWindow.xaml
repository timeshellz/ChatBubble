<Window x:Class="ChatBubbleClientWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatBubbleClientWPF"
        xmlns:controls="clr-namespace:ChatBubbleClientWPF.Controls"
        mc:Ignorable="d" Loaded="Window_Loaded"
        Title="LoginWindow" Height="470" Width="880" WindowStyle="None" Background="{StaticResource PrimaryColorBrush}" ResizeMode="NoResize" MouseDown="Window_MouseDown">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Center" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="1" Source="/Images/cbLogoTransparent.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Frame Name="CurrentUserForm" Grid.Row="2" NavigationUIVisibility="Hidden" Navigated="CurrentUserForm_Navigated"/>

    </Grid>
</Window>
