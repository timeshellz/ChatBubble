<Window x:Class="ChatBubbleClientWPF.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatBubbleClientWPF"
        xmlns:controls="clr-namespace:ChatBubbleClientWPF.Controls"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="470" Width="880" WindowStyle="None"
        Loaded="Window_Loaded" MouseDown="Window_MouseDown" ResizeMode="NoResize" Background="{StaticResource PrimaryColorBrush}">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <Image gif:ImageBehavior.AnimatedSource="../Animations/loadingScreen.gif" 
               MaxHeight="350" MaxWidth="800"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
