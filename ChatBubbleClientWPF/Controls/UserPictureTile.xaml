<UserControl x:Class="ChatBubbleClientWPF.Controls.UserPictureTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatBubbleClientWPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="180">

    <Grid>
        <Ellipse Grid.Row="0">
            <Ellipse.Fill>
                <ImageBrush ImageSource="/Images/PlaceholderProfilePictureOld.jpeg"/>
            </Ellipse.Fill>
            <Ellipse.ContextMenu>
                <ContextMenu Padding="9" Width="120" ItemsSource="{Binding ContextMenuItems}">
                </ContextMenu>
            </Ellipse.ContextMenu>
        </Ellipse>
        <Button Style="{StaticResource SelectorEllipseButtonStyle}">
            <Button.ContextMenu>
                <ContextMenu Padding="9" Width="120" ItemsSource="{Binding ContextMenuItems}"/>
            </Button.ContextMenu>
        </Button>
    </Grid>
</UserControl>
